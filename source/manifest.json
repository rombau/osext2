{
	"manifest_version": 2,
	"name": "Online Soccer Extension",
	"version": "2.0.0",
	"description": "Erweitert die Seiten von Online Soccer um n√ºtzliche Zusatzfunktionen.",
	"author": "Roman Bauer",
	"homepage_url": "https://github.com/rombau/osext2",
	"icons": {
		"48": "img/osext.png"
	},
	"background": {
		"scripts": [
			"js/background/cache.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://os.ongapo.com/*"
			],
			"js": [
				"js/content/model/consts.js",
				"js/content/model/data.js",
				"js/content/model/matchday.js",
				"js/content/model/player.js",
				"js/content/model/squadplayer.js",
				"js/content/model/youthplayer.js",
				"js/content/model/team.js",
				"js/content/requestor.js",
				"js/content/htmlutil.js",
				"js/content/persistence.js",
				"js/content/page.js",
				"js/content/pages/main.js",
				"js/content/pages/showplayer.js",
				"js/content/pages/gamereport.js",
				"js/content/pages/matchdayreport.js",
				"js/content/pages/showteam.overview.js",
				"js/content/pages/showteam.skills.js",
				"js/content/pages/showteam.contracts.js",
				"js/content/pages/showteam.info.js",
				"js/content/pages/showteam.season.js",
				"js/content/pages/leaguetable.js",
				"js/content/pages/team.overview.js",
				"js/content/pages/team.skills.js",
				"js/content/pages/trainer.js",
				"js/content/pages/training.js",
				"js/content/handler.js"
			],
			"all_frames": true
		}
	],
	"permissions": [
		"*://os.ongapo.com/*",
		"tabs",
		"storage"
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	  }
}
