{
	"manifest_version": 2,
	"name": "Online Soccer Extension",
	"version": "2.0.0",
	"description": "Erweitert die Seiten von Online Soccer um n√ºtzliche Zusatzfunktionen.",
	"author": "Roman Bauer",
	"homepage_url": "https://github.com/rombau/osext2",
	"icons": {
		"48": "images/osext.png"
	},
	"background": {
		"scripts": [
			"source/background/cache.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://os.ongapo.com/*"
			],
			"js": [
				"source/content/options.js",
				"source/content/model/consts.js",
				"source/content/model/data.js",
				"source/content/model/matchday.js",
				"source/content/model/player.js",
				"source/content/model/squadplayer.js",
				"source/content/model/youthplayer.js",
				"source/content/model/team.js",
				"source/content/requestor.js",
				"source/content/htmlutil.js",
				"source/content/persistence.js",
				"source/content/page.js",
				"source/content/pages/main.js",
				"source/content/pages/showplayer.js",
				"source/content/pages/gamereport.js",
				"source/content/pages/matchdayreport.js",
				"source/content/pages/showteam.base.js",
				"source/content/pages/showteam.overview.js",
				"source/content/pages/showteam.skills.js",
				"source/content/pages/showteam.contracts.js",
				"source/content/pages/showteam.info.js",
				"source/content/pages/showteam.season.js",
				"source/content/pages/leaguetable.js",
				"source/content/pages/team.overview.js",
				"source/content/pages/team.skills.js",
				"source/content/pages/trainer.js",
				"source/content/pages/training.js",
				"source/content/pages/loanview.js",
				"source/content/pages/contractextension.js",
				"source/content/handler.js"
			],
			"css": [
				"style/classic.css",
				"style/fontawesome.min.css",
				"style/solid.min.css"
			],
			"all_frames": true
		}
	],
	"web_accessible_resources": [
	   "style/fontawesome.min.css",
	   "style/solid.min.css",
	   "webfonts/fa-solid-900.woff2"
	],
	"permissions": [
		"*://os.ongapo.com/*",
		"tabs",
		"storage"
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	}
}
